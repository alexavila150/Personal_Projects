<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/start"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="#2196F3"
        android:gravity="center"
        android:onClick="start"
        android:text="GO!"
        android:textColor="#000000"
        android:textSize="150sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="225dp"
        android:layout_height="207dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.404">

        <TextView
            android:id="@+id/option1"
            android:layout_width="112dp"
            android:layout_height="102dp"
            android:background="#00FF00"
            android:gravity="center"
            android:onClick="option1Pressed"
            android:shadowColor="#380F0C"
            android:text="01"
            android:textColor="#000000"
            android:textColorHighlight="#F44336"
            android:textColorHint="#030000"
            android:textSize="50sp"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/option2"
            android:layout_width="112dp"
            android:layout_height="102dp"
            android:background="#FDEA3B"
            android:gravity="center"
            android:onClick="option2Pressed"
            android:text="02"
            android:textColor="#000000"
            android:textColorHighlight="#00C94848"
            android:textColorHint="#030000"
            android:textSize="50sp"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/option3"
            android:layout_width="112dp"
            android:layout_height="102dp"
            android:background="#0000FF"
            android:gravity="center"
            android:onClick="option3Pressed"
            android:text="03"
            android:textColor="#000000"
            android:textColorHighlight="#00C94848"
            android:textColorHint="#030000"
            android:textSize="50sp"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/option4"
            android:layout_width="112dp"
            android:layout_height="102dp"
            android:background="#FF0000"
            android:gravity="center"
            android:onClick="option4Pressed"
            android:shadowColor="#00861818"
            android:text="04"
            android:textColor="#000000"
            android:textColorHighlight="#2A82A7"
            android:textColorHint="#030000"
            android:textSize="50sp"
            app:layout_column="1"
            app:layout_row="1" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/equation"
        android:layout_width="111dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text=" 00 + 00"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.706" />

    <TextView
        android:id="@+id/score"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#FF5722"
        android:gravity="center"
        android:shadowColor="#000E0B0B"
        android:text="00/00"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="#9C27B0"
        android:gravity="center"
        android:shadowColor="#000E0B0B"
        android:text="30s"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/judge"
        android:layout_width="236dp"
        android:layout_height="82dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Correct!"
        android:textSize="36sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.158" />

    <Button
        android:id="@+id/playAgain"
        android:layout_width="164dp"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="start"
        android:text="Play Again"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judge" />

</androidx.constraintlayout.widget.ConstraintLayout>